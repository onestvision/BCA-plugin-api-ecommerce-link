{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "identify_number": {
      "type": "string",
      "unique": true,
      "required": true,
      "regex": "^\\d+$"
    },
    "identification_type": {
      "type": "string"
    },
    "phone_number": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "email": {
      "type": "email"
    },
    "city_code": {
      "type": "string"
    },
    "department_code": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "company_name": {
      "type": "string"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customer"
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "customer"
    }
  }
}
